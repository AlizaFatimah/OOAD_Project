@model IList<Fast_Food_Web_Application.Models.tbl_product_Class>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MealBox</title>
    <style>
        body {
            font-family: Arial;
            font-size: 17px;
            padding: 8px;
        }

        * {
            box-sizing: border-box;
        }

        .header {
            left: 0;
            right: 0;
            top: -1px;
            height: 15%;
            padding-top: 1px;
            text-align: center;
            background-color: white;
            color: skyblue;
            position: absolute;
            width: 100%;
            overflow: hidden;
        }



            .header .SearchText {
                float: right;
                padding: 6px;
                margin-top: 20px;
                font-size: 17px;
                border: none;
                width: 30%;
                margin-right: 0%;
                box-shadow: 0 4px 8px 0 Midnightblue;
                border-radius: 7px;
            }


        .Searchbutton {
            float: right;
            padding: 6px 15px;
            margin-top: 20px;
            margin-right: 29%;
            background: black;
            color: gray;
            font-size: 17px;
            border: none;
            cursor: pointer;
        }

            .Searchbutton:hover {
                background: black;
                color: white;
                box-shadow: 0 4px 8px 0 yellow;
            }

        .Logoimg {
            float: left;
            width: 18%;
            height: 80%;
            margin-left: 3%;
            cursor: pointer;
        }

        .bottom-left {
            position: absolute;
            bottom: 12px;
            left: 20px;
            color: black;
            padding-left: 10.5%;
            color: hsl(0, 80%, 50%);
            font-weight: 900;
            font-size: 24px;
        }


        .topnav {
            background-color: black;
            position: absolute;
            padding-top: 1px;
            top: 12%;
            left: 0;
            right: 0;
            width: 100%;
            transition: top 0.3s;
            box-shadow: 0 4px 8px 0 yellow;
        }

        .sidenavPosition {
            cursor: pointer;
            text-decoration: none;
            font-size: 15px;
            background-color: black;
            border: none;
            color: gray;
            border-bottom: 3px solid transparent;
            margin-top: 8px;
        }

            .sidenavPosition:hover {
                color: white;
                cursor: pointer;
                border-bottom: 3px solid red;
            }



        .naveright {
            float: right;
            margin-right: 7%;
            padding-top: 1%;
        }


        .sidenav {
            height: 100%;
            width: 0;
            top: 20%;
            position: fixed;
            z-index: 1;
            left: 0;
            background-color: #111;
            overflow-x: hidden;
            transition: 0.5s;
            padding-top: 60px;
        }

            .sidenav a {
                padding: 8px 8px 8px 32px;
                text-decoration: none;
                font-size: 25px;
                color: #818181;
                display: block;
                transition: 0.3s;
                border-bottom: 3px solid transparent;
            }

                .sidenav a:hover {
                    color: #f1f1f1;
                    border-bottom: 3px solid red;
                }

            .sidenav.active {
                color: white;
                border-bottom: 3px solid red;
            }

            .sidenav .closebtn {
                position: absolute;
                top: 0;
                right: 25px;
                font-size: 36px;
                margin-left: 50px;
            }

        .sidenavPosition {
            cursor: pointer;
            padding: 2px 16px;
            text-decoration: none;
            font-size: 15px;
            background-color: black;
            border: none;
            color: gray;
            border-bottom: 3px solid transparent;
        }

            .sidenavPosition:hover {
                color: white;
                cursor: pointer;
                border-bottom: 3px solid red;
            }


            .sidenavPosition.active {
                color: white;
                border-bottom: 3px solid red;
            }
        #Everyboder {
            padding-right: 200%;
            padding-top: 2%;
            border-bottom: 3px solid red;
            box-shadow: 0 4px 8px 0 navy;
            font-size: 20px;
            position: absolute;
        }
        .badge {
            position: absolute;
            padding-top: 9%;
            left: 203%;
            padding: 5px 10px;
            border-radius: 50%;
            background: red;
            color: white;
        }
        .checkoutbutton {
            margin-top: 20px;
            cursor: pointer;
            padding: 7px 16px;
            text-decoration: none;
            font-size: 15px;
            background-color: black;
            border: none;
            color: gray;
            border-radius: 6px;
            border-bottom: 3px solid transparent;
        }

            .checkoutbutton:hover {
                color: white;
                cursor: pointer;
                border-bottom: 3px solid red;
            }
        .addToBucketButton {
            border-radius: 6px;
        }

            .addToBucketButton:hover {
                color: white;
                border-bottom: 3px solid red;
            }
        .b {
            margin-left: 5%;
        }
        #main {
            transition: margin-left .5s;
            padding-left: 8%;
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="@Url.Content("~/ContentStyle/EverydayValue_Style.css")" rel="stylesheet" type="text/css" />


</head>
<body><div class=" header">
        
              <img class="Logoimg" src="~/ContentStyle/1.png" />
              <div class="bottom-left"></div>
        
    <input class="Searchbutton" type="submit" name="name" value="Search " />

    <input class="SearchText" type="text" name="name" placeholder="Search " />

          <span style="margin-left:60%">
              <button class="checkoutbutton" type="submit" name="name" onclick="location.href='@Url.Action("checkout", "Home")'">Check Out</button>
            
          </span>

          <br><br>
          <br>

          <br>
</div>

    <div class="topnav">
        
        <div class="b">
            <input class="sidenavPosition" type="submit" name="name" onclick="openNav()" value="&#9776 More" />

            <input class="sidenavPosition" type="submit" name="name" onclick="location.href='@Url.Action("EveryDayValue", "Home")'" value="EVERYDAY VALUE" />
            <input class="sidenavPosition" type="submit" name="name" onclick="location.href='@Url.Action("MakeItAMeal", "Home")'" value="MAKE IT A MEAL " />
            <input class="sidenavPosition" type="submit" name="name" onclick="location.href='@Url.Action("MealBox", "Home")'" value="MEAL BOX " />
            <input class="sidenavPosition" type="submit" name="name" onclick="location.href='@Url.Action("Sharing", "Home")'" value="SHARING " />
            <input class="sidenavPosition" type="submit" name="name" onclick="location.href='@Url.Action("Promotions", "Home")'" value="PROMOTIONS" />
            <input class="sidenavPosition" type="submit" name="name" onclick="location.href='@Url.Action("Snacks", "Home")'" value="SNAKS" />
            <input class="sidenavPosition" type="submit" name="name" onclick="location.href='@Url.Action("MidNightDeals", "Home")'" value="MIDNIGHT DEALS" />



            <div class="naveright">

                <button class="sidenavPosition" type="submit" onclick="location.href='@Url.Action("Registration", "RegLogin")'" name="name">
                    <i style="font-size:24px" class="fa">&#xf08b;</i>

                    Register
                </button>
                <button class="sidenavPosition" type="submit" onclick="location.href='@Url.Action("Login", "RegLogin")'" name="name">
                    Login <i style="font-size:24px" class="fa">&#xf090;</i>
                </button>
            </div>
        </div>
    </div>

    <div id="mySidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&lArr;</a>
        <a href="#">About</a>
        <a href="#">Services</a>
        <a href="#">Clients</a>
        <a href="#">Contact</a>
    </div>


    <br><br><br><br><br><br>

   

        <div class="main">

            <div>

                @if (TempData["total"] == null)
                {

                    <h3>
                        Total Bill: 0 Rs
                    </h3>

                }
                else
                {
                    <h3> Total Bill: @TempData["total"] Rs</h3>

                }


            </div>


            <table>

                <tr>

                    <td>
                        <h1 style="border: 2px solid navy; width: 620%; color: navy; font-weight: bold; box-shadow: 0 4px 8px 0 navy;border-bottom:3px solid red;text-align:center">
                            MEAL BOX
                        </h1>
                    </td>
                </tr>

            </table>

            
            <table cellpadding="5" cellspacing="5" class="cellPadding_tab">

                @{
        const int numofcolumn = 3;
        int skip = 0;

        var items = Model.Skip(skip).Take(numofcolumn);
        while (items.Count() > 0)
        {
            <tr>
                @foreach (var item in items)
                {

                    <td width="450">
                        <table class="showImageTable">
                            <tr>

                                <td><img src="@Url.Content(item.pro_FoodImage)" class="FoodImage"> <br><br></td>

                                @*<img src='@b' style="max-width:200px; max-height:200px" class="imageclass">*@

                            </tr>
                            <tr>
                                <td class="displayDetail">
                                    @item.pro_FoodName
                                    <br>
                                    <br>
                                </td>

                            </tr>

                            <tr>
                                <td style="color: black; font-size:13px;font-weight:   300">
                                    @item.pro_FoodDescription
                                    <br>
                                    <br>
                                </td>

                            </tr>
                            <tr>
                                <td style="color: red">
                                    <span style="color:black">
                                        PKR
                                    </span> @item.pro_FoodPrice
                                    <br>
                                    <br>
                                </td>

                            </tr>
                            <tr>
                                <td>
                                    <button class="addToBucketButton" onclick="location.href='@Url.Action("addtocart","Home", new { id = @item.pro_Food_id })'"> <i style="font-size:24px; color: red;" class="fa fa-shopping-cart"></i>&nbsp;&nbsp;&nbsp; ADD TO BUCKET </button>

                                    <br>
                                    <br>
                                </td>

                            </tr>

                        </table>
                    </td>
                }
            </tr>
                skip += numofcolumn;

                items = Model.Skip(skip).Take(numofcolumn);
        }
                }



            </table>



        </div>
    






        <script>
            function openNav() {
                document.getElementById("mySidenav").style.width = "170px";

                document.getElementById("main").style.marginLeft = "250px";

            }

        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
            document.getElementById("main").style.marginLeft = "0";

        }




    </script>


</body>
</html>
