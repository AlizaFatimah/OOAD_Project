    <style>
        * {
            box-sizing: border-box;
        }

        body {
            background-color: #f1f1f1;
            padding: 20px;
            font-family: Arial;
        }

        .header {
            top: -1px;
            left: 0;
            background-color: black;
            width: 100%;
            padding-top: 3%;
            position: fixed;
            box-shadow: 0 4px 8px 0 yellow;
        }

        .main {
            max-width: 500px;
            padding-top: 8%;
            margin-left: 23%;
            position: absolute;
            padding-bottom: 2%;
          
        }




        .clearfix::after {
            content: "";
            clear: both;
            display: table;
      
            overflow: auto;
         
        }
        .checkoutbutton {
            margin-top: 20px;
            cursor: pointer;
            padding: 7px 16px;
            text-decoration: none;
            font-size: 15px;
            background-color: black;
            border: none;
            color: gray;
            border-radius: 6px;
            border-bottom: 3px solid transparent;
        }

            .checkoutbutton:hover {
                color: white;
                cursor: pointer;
                border-bottom: 3px solid red;
            }
        .topnav {
            background-color: black;
            position: absolute;
            padding-top: 1px;
            top: 0%;
            left: 0;
            right: 0;
            width: 100%;
            transition: top 0.3s;
            box-shadow: 0 4px 8px 0 yellow;
        }

        .sidenavPosition {
            cursor: pointer;
            text-decoration: none;
            font-size: 15px;
            background-color: black;
            border: none;
            color: gray;
            border-bottom: 3px solid transparent;
            margin-top: 8px;
        }

            .sidenavPosition:hover {
                color: white;
                cursor: pointer;
                border-bottom: 3px solid red;
            }
        .b {
           
            margin-left: 40%;
        }
        .c {
            margin-left: 5%;
        }
    </style>

</head>
